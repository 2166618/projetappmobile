<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.creationcompte.CreationCompteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/creationComteTextView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="@string/titre_creation_compte"
            android:textSize="16sp" />

        <!-- Champ pour le courriel -->
        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:hint="Courriel"
            android:inputType="textEmailAddress" />

        <!-- Champ pour le mot de passe -->
        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:hint="Mot de passe"
            android:inputType="textPassword" />

        <!-- Champ pour la confirmation du mot de passe -->
        <EditText
            android:id="@+id/editTextConfirmPassword"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:hint="Confirmer le mot de passe"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnCreationCompte"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/creation_compte" />

        <Button
            android:id="@+id/btnConnexion"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/connexion" />

    </LinearLayout>

</FrameLayout>